<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/gridViewStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:background="@drawable/custom_bg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.home.HomeFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/off_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTV"
            style="@style/tv_expense_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dated"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseDateFetched"
            style="@style/tv_expense_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incomeShown"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="50dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_download" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/black" />


    <LinearLayout
        style="@style/tv_expense_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expenseId"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ExpenseIdFetched"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/incomeShown"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        style="@style/tv_expense_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ExpenseTV"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/expense_added"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ExpenseEntered"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/incomeShown" />


    </LinearLayout>

    <LinearLayout
        style="@style/tv_expense_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expenseCategoryTV"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/source"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseCategoryFetched"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/incomeShown" />


    </LinearLayout>


    <LinearLayout
        style="@style/tv_expense_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expenseSourceTV"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseSourceFetched"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/incomeShown" />


    </LinearLayout>

    <LinearLayout
        style="@style/tv_expense_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/DetailsTV"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseDetailsFetched"
            style="@style/tv_expense_instruction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/incomeShown" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@color/black" />

</LinearLayout>