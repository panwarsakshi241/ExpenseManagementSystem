<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner"
            style="@style/expenseManagementSystemH2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background"
            android:entries="@array/expenseResources"
            android:padding="10dp"
            android:popupBackground="@drawable/custom_background">

        </Spinner>

        <LinearLayout
            style="@style/expenseManagementSystemH2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addincome"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="@color/green"
                    android:text="@string/add_income_btn" />

                <Button
                    android:id="@+id/addexpense"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="@color/red"
                    android:text="@string/add_expense_btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addtransfer"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="@string/transfer_btn" />

                <Button
                    android:id="@+id/view"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="@color/gray"
                    android:text="@string/view_btn" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/gridViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/teal"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="30dp">

            <TextView
                style="@style/expenseManagementSystemH1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monthly_report_textView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/income_added"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/income_tv"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/income_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_balance"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_balance_TV"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previous_balance_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expense"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/expense_added"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expense_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current_balance_added"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/current_balance_TV"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_balance_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
