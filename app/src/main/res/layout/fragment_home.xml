<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/gridViewStyle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="@string/my_dashboard_TV"
                    android:textColor="@color/teal_700" />

                <TextView
                    android:id="@+id/accountHolder"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/acount_holder_name_TV"
                    android:textColor="@color/teal_700"
                    android:textSize="14sp" />


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profilepicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="end"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/teal_700"
                app:civ_border_width="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                style="@style/expenseManagementSystemH2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg"
                android:entries="@array/expenseResources"
                android:padding="10dp">

            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/addincome"
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_income"
                        android:text="@string/add_income_btn" />

                    <ImageButton
                        android:id="@+id/addexpense"
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/expense"
                        android:text="@string/add_expense_btn" />

                    <ImageButton
                        android:id="@+id/addtransfer"
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/transfermoney"
                        android:text="@string/transfer_btn" />

                    <ImageButton
                        android:id="@+id/view"
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_outer_background"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/generatereports"
                        android:text="@string/view_btn" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/add_incomeTV"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_expense"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/add_transferTV"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        style="@style/expenseManagementSystemH2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/view_reportTV"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/gridViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/teal_700"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/white" />

                <TextView
                    style="@style/expenseManagementSystemH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_report_textView"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/income_added"
                        style="@style/settingStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/income_tv"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/income_shown"
                        style="@style/settingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incomeShown"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/previous_balance"
                        style="@style/settingStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/previous_balance_TV"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/previous_balance_shown"
                        style="@style/settingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incomeShown"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expense"
                        style="@style/settingStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/expense_added"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/expense_shown"
                        style="@style/settingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incomeShown"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/current_balance_added"
                        style="@style/settingStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/current_balance_TV"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/current_balance_shown"
                        style="@style/settingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incomeShown"
                        android:textColor="@color/white"
                        android:textStyle="italic" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/yellow_200" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/teal_200" />

    </LinearLayout>

</ScrollView>
