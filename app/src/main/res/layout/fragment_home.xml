<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profilepicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                android:gravity="center"/>

            <TextView
                style="@style/gridViewStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arbutus_slab"
                android:text="My Dashboard"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner"
            style="@style/expenseManagementSystemH2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background"
            android:entries="@array/expenseResources"
            android:padding="10dp"
            android:popupBackground="@drawable/custom_background">

        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/addincome"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/custom_bg"
                    android:backgroundTint="@color/off_white"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_add"
                    android:text="@string/add_income_btn" />

                <ImageButton
                    android:id="@+id/addexpense"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/custom_bg"
                    android:backgroundTint="@color/off_white"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_sub"
                    android:text="@string/add_expense_btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/addtransfer"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/custom_bg"
                    android:backgroundTint="@color/off_white"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_transfer"
                    android:text="@string/transfer_btn" />

                <ImageButton
                    android:id="@+id/view"
                    style="@style/expenseManagementSystemH2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/custom_bg"
                    android:backgroundTint="@color/off_white"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_view"
                    android:text="@string/view_btn" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/gridViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/purple_700"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="30dp">

            <TextView
                style="@style/expenseManagementSystemH1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monthly_report_textView"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/income_added"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/income_tv"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/income_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_balance"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_balance_TV"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previous_balance_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expense"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/expense_added"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expense_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current_balance_added"
                    style="@style/settingStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/current_balance_TV"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_balance_shown"
                    style="@style/settingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/incomeShown"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
